<UserControl x:Class="ToolshopApp2.View.UserControlers.TaskWindowControllers.CommentsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolshopApp2.View.UserControlers.TaskWindowControllers"
             mc:Ignorable="d" Width="500" Height="150">
    <Grid>
        <TextBox x:Name="_TextboxComment" Margin="0,0,81,0" TextWrapping="Wrap" Text="Add Comment"/>
        <Button x:Name="_ButtonAddComment" Click="_ButtonAddComment_Click" ContentStringFormat="Wrap" HorizontalAlignment="Right" Width="76">
            <Button.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Add" HorizontalAlignment="Center"/>
                    <TextBlock Text="Comment"/>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
